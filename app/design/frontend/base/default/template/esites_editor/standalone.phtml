<script>
	(function (window) {
		var doc = window.document,
			esites_editor = {
				instances: [],
				version: '<?php echo $this->getExtensionVersion(); ?>',
				settings: <?php echo json_encode($this->getEditorConfig()); ?>,
				init: function () {
					requirejs(['<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB, true);?>js/esites_editor/dist/js/app.js']);
